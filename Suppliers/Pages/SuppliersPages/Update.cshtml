@page "/SuppliersPages/{SupplierId}/Update"
@model Suppliers.Pages.SuppliersPages.UpdateModel
@{
}


<form method="POST">
    <div class="row mb-3">
        <label for="name" class="col-md-1">Name</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="name" id="name"
                   placeholder="Enter full name" value="@Model.SupplierUpdateDto.Name" />
        </div>
    </div>


    <div class="row mb-3">
        <label for="categoryid" class="col-md-1">CategoryId</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="categoryid" id="categoryid"
                   placeholder="Enter CategoryId" value="@Model.SupplierUpdateDto.CategoryId" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="afm" class="col-md-1">AFM</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="afm" id="afm"
                   placeholder="Enter AFM" value="@Model.SupplierUpdateDto.AFM" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="address" class="col-md-1">Address</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="address" id="address"
                   placeholder="Enter Address" value="@Model.SupplierUpdateDto.Address" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="phone" class="col-md-1">Phone</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="phone" id="phone"
                   placeholder="Enter Phone" value="@Model.SupplierUpdateDto.Phone" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="email" class="col-md-1">Email</label>
        <div class="col-md-6">
            <input type="email" class="form-control" name="email" id="email"
                   placeholder="Enter Email" value="@Model.SupplierUpdateDto.Email" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="countryid" class="col-md-1">CountryId</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="countryid" id="countryid"
                   placeholder="Enter CountryId" value="@Model.SupplierUpdateDto.CountryId" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="isactive" class="col-md-1">Is Active</label>
        <div class="col-md-6">
            <input type="checkbox" class="form-check-input" name="IsActive" id="isactive"
                   value="true" @Model.SupplierUpdateDto.IsActive />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button type="Submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-md-3 d-grid">
            <a href="/SuppliersPages/getall" class="btn btn-outline-primary">Cancel</a>
        </div>

    </div>
</form>

<div>
    @if (Model.ErrorArray.Count != 0)
    {
        @foreach (var error in Model.ErrorArray)
        {
            <div>
                <p>@error.Message</p>
            </div>
        }
    }
</div>